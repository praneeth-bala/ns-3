## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-


def build(bld):
    if bld.env['ENABLE_MPI']:
        module = bld.create_ns3_module('point-to-point', ['network', 'mpi','cosim'])
    else:
        module = bld.create_ns3_module('point-to-point', ['network'])
    module.source = [
        'model/point-to-point-net-device.cc',
        'model/point-to-point-channel.cc',
        'model/ppp-header.cc',
        'helper/point-to-point-helper.cc',
        'helper/point-to-point-helper-simbricks.cc',
        ]
    if bld.env['ENABLE_MPI']:
        module.source.append('model/point-to-point-remote-channel.cc')
        module.source.append('model/point-to-point-remote-channel-simbricks.cc')
    
    module_test = bld.create_ns3_module_test_library('point-to-point')
    module_test.source = [
        'test/point-to-point-test.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'point-to-point'
    headers.source = [
        'model/point-to-point-net-device.h',
        'model/point-to-point-channel.h',
        'model/ppp-header.h',
        'helper/point-to-point-helper.h',
        'helper/point-to-point-helper-simbricks.h',
        ]
    if bld.env['ENABLE_MPI']:
        headers.source.append('model/point-to-point-remote-channel.h')
        headers.source.append('model/point-to-point-remote-channel-simbricks.h')

    if (bld.env['ENABLE_EXAMPLES']):
        bld.recurse('examples')

    bld.ns3_python_bindings()
